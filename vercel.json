{
  "framework": "remix",
  "buildCommand": "node node_modules/@remix-run/dev/dist/cli.js build",
  "installCommand": "pnpm install --frozen-lockfile",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 