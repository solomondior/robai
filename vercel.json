{
  "buildCommand": "remix vite:build",
  "framework": "remix",
  "installCommand": "pnpm install",
  "regions": ["iad1"],
  "outputDirectory": "build/client",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 